<?php
include '../includes/config.php';

if (!isset($_SESSION['user_id']) || $_SESSION['role'] !== 'college') {
    header('Location: ../index.php');
    exit();
}

$college_id = $_SESSION['user_id'];

// Get college statistics
$stmt = $pdo->prepare("SELECT COUNT(*) FROM students WHERE college_id = ?");
$stmt->execute([$college_id]);
$students_count = $stmt->fetchColumn();

$stmt = $pdo->prepare("
    SELECT COUNT(*) FROM registrations r 
    JOIN students s ON r.student_id = s.id 
    WHERE s.college_id = ?
");
$stmt->execute([$college_id]);
$registrations_count = $stmt->fetchColumn();
?>
